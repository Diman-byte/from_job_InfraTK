        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spravochnik_Dima_WPF_2"
        mc:Ignorable="d"
            Title="Справочник" Height="400" Width="800">
    <Grid>
        <TextBlock FontSize="20" TextWrapping="Wrap" Margin="7,10,10,199">Введите строку подключения к БД PostgreSQL в таком виде:</TextBlock>
        <TextBlock FontSize="20" TextWrapping="Wrap" Foreground="Green" Margin="7,60,10,145">Host=localhost;Username=postgres;Password=postgres;Database=PA_Project</TextBlock>
        <TextBox Name="ConnectionStringTextBox" FontSize="20" Height="35" Margin="7,135,13,0" VerticalAlignment="Top"/>
        <Button FontSize="15" Content="Заполнить таблицы единицами измерения" Height="40" Margin="10" VerticalAlignment="Bottom" Click="OnRunMainFunction"/>
    </Grid>
</Window>
